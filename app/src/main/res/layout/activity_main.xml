<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A61F8D4"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/cityNameTxt"
        android:layout_width="199dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="city name"
        android:inputType="textPersonName"
        android:scrollbarSize="4dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="149dp"
        android:layout_height="98dp"
        android:background="#9547F323"
        android:text="search"
        android:textColor="#120505"
        android:textColorHint="#8B8E8585"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/cityNameTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="407dp"
        android:layout_height="355dp"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toBottomOf="@+id/cityNameTxt"
        tools:layout_editor_absoluteX="1dp">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>
